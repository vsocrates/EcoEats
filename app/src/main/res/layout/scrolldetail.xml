<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#4CAF50">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="400dp"
            android:layout_height="800dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.00"
                    android:id="@+id/button"
                    android:layout_gravity="right|top"
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    android:background="@color/highlighted_text_material_dark"
                    android:layout_marginRight="10dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:00 PM Today"
                    android:id="@+id/button2"
                    android:layout_gravity="left|top"
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    android:background="@color/highlighted_text_material_dark"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/pizza"
                    android:layout_gravity="center" />

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="6 People"
                    android:id="@+id/textView2"
                    android:textSize="22dp"
                    android:layout_weight=".3333"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="5.2 Miles"
                    android:id="@+id/textView"
                    android:textSize="22dp"
                    android:layout_weight=".3333"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".5">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:layout_weight=".5">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView2"
                            android:src="@drawable/chef" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="John Brown"
                        android:id="@+id/textView4"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Address: 550 Memorial Dr Cambridge, MA"
                        android:id="@+id/textView5"
                        android:layout_gravity="bottom"
                        android:textColor="#ffffff"
                        android:layout_marginTop="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_weight=".5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Description: I want to make a gourmet vegetable pizza. Come join me at my house for a delicious meal and a great time."
                        android:id="@+id/textView6"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:password="false"
                        android:layout_marginTop="20dp"
                        android:gravity="left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Cuisine: American"
                        android:id="@+id/textView7"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:password="false"
                        android:layout_marginTop="20dp"
                        android:gravity="left" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join Meal"
                        android:id="@+id/button3"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/highlighted_text_material_dark" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Host Profile"
                        android:id="@+id/button4"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/highlighted_text_material_dark"
                        android:onClick="changeToProfile" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gourmet Pizza"
            android:id="@+id/textView3"
            android:textSize="30dp"
            android:layout_marginTop="300dp"
            android:textColor="#ffffff" />
    </RelativeLayout>
</ScrollView>